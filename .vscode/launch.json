    "version": "0.2.0",
    "configurations": [
        {
            "name": "Sort",
            "runtimeExecutable": "yarn",
            "program": "start",
            "args": [
                "${file}",
                "sort"
            ],
            "cwd": "${workspaceFolder}",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "YAML",
            "runtimeExecutable": "yarn",
            "program": "yaml",
            "cwd": "${workspaceFolder}",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "DAT",
            "runtimeExecutable": "yarn",
            "program": "dat",
            "cwd": "${workspaceFolder}",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        }
    ]
}