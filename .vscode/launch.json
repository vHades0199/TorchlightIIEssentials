    "version": "0.2.0",
    "configurations": [
        {
            "name": "Sort",
            "runtimeExecutable": "yarn",
            "program": "start",
            "args": [
                "${file}",
                "sort"
            ],
            "cwd": "${workspaceFolder}",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "Merge",
            "runtimeExecutable": "yarn",
            "program": "start",
            "args": [
                "${file}",
                "merge"
            ],
            "cwd": "${workspaceFolder}",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "Convert",
            "runtimeExecutable": "yarn",
            "program": "start",
            "args": [
                "${file}",
            ],
            "cwd": "${workspaceFolder}",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "Scan",
            "runtimeExecutable": "yarn",
            "program": "start",
            "args": [
                "./media/TRANSLATIONS/VIETNAMESE/TRANSLATION.DAT",
                "scan",
                "./media/UI/",
            ],
            "cwd": "${workspaceFolder}",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "Tag",
            "runtimeExecutable": "yarn",
            "program": "start",
            "args": [
                "./media/TRANSLATIONS/VIETNAMESE/TRANSLATION.DAT",
                "tag",
                "${file}",
            ],
            "cwd": "${workspaceFolder}",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        }
    ]
}